import url from './url'
import createAxios from '@/utils/request'
import type { ExtensionalAxiosRequestConfig } from '@/utils/request/interface'
import * as types from './interface'

export * from './interface'

/** 新增 */
export function addFlightZoneRoadAbnormalApi(
  data: types.AddFlightZoneRoadAbnormalParams,
  opts?: ExtensionalAxiosRequestConfig
) {
  return createAxios({
    ...opts,
    url: url.flightZoneRoadAbnormal,
    method: 'POST',
    data,
    showCodeMessage: true
  })
}

/** 修改 */
export function editFlightZoneRoadAbnormalApi(
