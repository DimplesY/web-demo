  opts?: ExtensionalAxiosRequestConfig
) {
  return createAxios({
    ...opts,
    url: url.flightZoneRoadAbnormal,
    method: 'PUT',
    data
  })
}

/** 删除 */
export function deleteFlightZoneRoadAbnormalApi(
  data: types.DeleteFlightZoneRoadAbnormalParams,
  opts?: ExtensionalAxiosRequestConfig
) {
  return createAxios({
    ...opts,
    url: `${url.flightZoneRoadAbnormal}/${data.id}`,
    method: 'DELETE'
  })
